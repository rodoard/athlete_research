<p id="notice"><%= notice %></p>

<h1>Overview for <%= date %></h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Sparkline</th>
      <th>Today</th>
      <th>Days to Recovery</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= load_sparkline(player) %></td>
        <% training_load_for_date = player.training_load_for date %> 
        <td><%= training_load_for_date %></td>
        <% past_three_days_training_loads_from_date = player.past_three_days_training_loads_from date %> 
        <td><%= recover_time training_load_for_date, past_three_days_training_loads_from_date %> </td>
        <td><a href="#TODO">Chart &raquo;</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
