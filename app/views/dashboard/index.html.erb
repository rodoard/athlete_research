<p id="notice"><%= notice %></p>

<h1>Overview for <%= date %></h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Sparkline</th>
      <th>Today</th>
      <th>Days to Recovery</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= load_sparkline(player) %></td>
        <td><%= player.training_load_for date %></td>
        <td><%= player.recover_time_for(date).days_to_recover %> </td>
        <td><a href="<%= player_training_load_path(player) %>">Chart &raquo;</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
